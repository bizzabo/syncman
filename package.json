{
  "name": "syncman",
  "version": "0.1.5",
  "description": "CLI tool that syncs OAS files to Postman and generates Postman collections based on them",
  "main": "lib/index.js",
  "types": "lib/syncer.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "sync": "npm run build && node lib/index.js",
    "build": "tsc -p .",
    "prepublish": "npm run build",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "bin": {
    "syncman": "./lib/index.js"
  },
  "author": "Greg Rashkevitch",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.26.1",
    "chalk": "^4.1.2",
    "commander": "^9.1.0",
    "dotenv": "^16.0.0",
    "figlet": "^1.5.2",
    "openapi-to-postmanv2": "^2.14.1",
    "ora": "^5.4.1",
    "util.promisify": "^1.1.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.5.4",
    "@types/node": "^17.0.23",
    "@types/postman-collection": "^3.5.7",
    "@types/util.promisify": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bizzabo/syncman"
  },
  "keywords": [
    "swagger",
    "oas",
    "postman"
  ]
}
